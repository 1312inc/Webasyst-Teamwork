.t-tasks-wrapper

    .t-checkbox-column
        display none
        padding 1.25rem 0.25rem 1.25rem 1rem

    &.t-selection-checkboxes-visible

        .t-checkbox-column
            display block

    .list

        .item

            .image
                padding-left 0.75rem

            .t-task-item-title
                font-size 0.9375rem
                line-height 1.375
                margin-bottom 0.25rem
                display block

                .t-status-wrapper
                    font-size 0.875rem

            .t-task-item-subcount
                margin-bottom 0.25rem
                font-size 0.9375rem
                white-space nowrap

                .t-task-item-unread-mention
                    position relative
                    top -1px
                    margin-left 0.25rem

                    .badge
                        padding-top 1px

        .item.selected

            background var(--accent-color) !important
            color var(--white) !important

            *
                color var(--white) !important

                .t-pinned-comment
                    background var(--light-gray)

        &.new-task
            margin-bottom 0

            li
                background var(--highlighted-yellow)
                position relative
                box-shadow 0 0.5rem 1rem -0.5rem var(--dialog-shadow-color)
                z-index 1

.t-single-task-wrapper
    .article
        min-height calc(100vh - 4rem)

        .article-body
            padding 2rem 4rem 6rem

            @media forMedium
              padding 1rem 2.5rem

            @media forMobile
              padding 0.75rem 1rem

.t-status-wrapper
    white-space nowrap
    display inline-block

    h2 & {
        font-size 0.6125em
        padding 0.25rem 0.5rem
        margin-left 0.5rem
        white-space nowrap
        position relative
        top -2px
    }

    &.is-new
        $color = var(--green)
        border-color $color
        background $color
        color var(--white)

    &.is-done
        $color = var(--light-gray)
        border-color $color
        background $color
        color #fff

    &.is-archived
        $color = var(--brown)
        border-color $color !important
        background $color !important
        color var(--white) !important


.t-priority-wrapper
    position relative
    color var(--text-color-strong)
    border-radius 0.25em
    margin-right 0.125em

    &.is-low
        color var(--gray)

    &.is-normal

    &.is-high
        font-weight bold
        color var(--text-color-stronger)

        svg
            color orange

    &.is-urgent
        font-weight bold
        color red

    &.is-onfire
        font-weight bold
        color white
        background #f22 url('../img/priority-fire.gif') no-repeat !important
        background-size 13em 13em !important
        background-position center -6em !important
        padding 0.125em 0.25em
        margin-right 0.25em

    &.t-priority-clickable-wrapper
        background var(--background-color-input-solid)
        border 0.125em solid transparent
        padding 0 0.25em
        transition 0.1s
        margin-right 0.5rem

        &.t-white
            background: $white_color_strong;

        &.t-gray
            background: $gray_color_strong;

        &.t-green
            background: $green_color_strong;

        &.t-blue
            background: $blue_color_strong;

        &.t-purple
            background: $purple_color_strong;

        &.t-red
            background: $gred_color_strong;

        &.t-yellow
            background: $yellow_color_strong;

        .icon
            margin-right 0.375em

        &:hover
            border-color var(--border-color-input)



.t-priority-changer-wrapper
    display none
    position absolute
    top -5px
    left 0
    z-index 99
    width 320px
    background var(--background-color-blank)
    padding 1.25rem 1.5rem
    border-radius 0.5em
    box-shadow 0 1rem 2rem -0.25rem rgba(0,0,0,0.2), 0 0.5rem 1rem -0.75rem rgba(0,0,0,0.4)

    &.is-shown
        display block


.t-tags-wrapper
    .is-template
        display none

    .t-tag-item
        .t-remove-tag
            display none

        &:hover
            .t-remove-tag
                display inline

.t-task-header
    margin-bottom 0.5rem

    .t-menu-name
        margin-top 0.5rem
        line-height 1
        font-size 0.9375rem

        .icon
            margin-right 0.75rem

            .size-20
                width 1.25rem
                height 1.25rem
                margin-top -0.125rem

    .t-controls-wrapper
        font-size 0.9375rem

        @media forMobile
            margin-top: 0.75rem

        svg
            font-size 1rem
            height 1rem

.t-task-body
    margin-top 1rem
    margin-bottom 0.25rem

    h2
        line-height 1.3em
        word-break break-word

        @media forMedium
            font-size 1.5rem

    @media forMedium
        margin-top 0.75rem

    @media forMobile
        margin-top 1rem

.t-task-buttons-divider
    margin-bottom 0
    margin-top 0

.t-quote-wrapper
    border-radius 1rem

.t-task-buttons
    background-color var(--buttons-sticky-mode-background-color)
    backdrop-filter blur(0.25rem)
    position sticky
    z-index 13
    top 4rem
    margin 0rem -1rem
    padding 0.5rem 1rem
    line-height 3rem

    @media forMedium
        padding-top 0.25rem
        padding-bottom 0.25rem

    @media forMobile
        position static

    .t-task-button
        .button
            font-size 112.5%

            @media forMedium
                font-size 100%

            @media forMobile
                font-size 125%
                margin-bottom 0.75rem

        .icon
            vertical-align 0.0625em
            font-size 1rem

            @media forMedium
                font-size 0.875rem

            @media forMobile
                display block
                font-size 1.5rem
                text-align center
                margin 0.125rem auto 0

        .t-button-label
            @media forMobile
                font-size 0.8125rem

        @media forMobile
            order 2

    .t-task-button.t-task-action
        @media forMobile
            flex 1 0 100%
            order 1

            .button
                width 100%

    .t-task-button.t-task-close
        @media forMobile
            .button
                width 100%


.t-relations-wrapper
    margin-bottom 1.5rem

    .app-icon
        width 1.25rem
        height 1.25rem
        position relative
        top 0.125rem

    .badge
        padding-top 0.25em
        padding-bottom 0.25em
        margin-top 0.1875rem
