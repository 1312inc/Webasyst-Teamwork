$white_color = #fff;
$gray_color = #f7f7f7;
$green_color = #f3ffe3;
$blue_color = #f8ffff;
$purple_color = #fcf3ff;
$red_color = #fff1f1;
$yellow_color = #ffffe3;

.t-background-wrapper
    display none
    position fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
    background var(--dialog-background-color);

    &.is-shown
        display block

.t-task-page-wrapper

    &.is-single-page
        position relative
        z-index 1
        // box-shadow: 0 1px 5px rgba(0,0,0,0.13);

    .t-header-wrapper
        button.light-gray
            background var(--background-color-blank)

    .t-task-page-block
        padding: 0.25rem 0.75rem 0

        @media forMobile
            padding-bottom 5rem

        .t-form-line
            margin: 0.6125rem 0 0

            &:first-child
                margin-top: 0

            hr
                margin 0 0.75rem
                border-color var(--border-color-soft)

            .lexical-editor
                .toolbar
                    position sticky
                    top 4rem
                    z-index 1

        .t-table-layout
            display table
            width 100%

            & > .t-column
                display table-cell
                vertical-align top
                padding 0.6125rem 0.6125rem 0

                &.t-column-3
                    width 220px
                    padding-left 14px
                    text-align right
                    vertical-align middle

                    @media forMobile
                        width 100%
                        margin 1.25rem 0 0.5rem

                @media forMobile
                    display block

        .t-task-name-wrapper
            input
                width 100%
                box-sizing border-box
                font-size 1.375rem
                padding-left 0.25rem
                border none !important
                background-color var(--background-color-blank)

            button
                border none !important

        .t-attach-wrapper
            margin 0

            .t-attached-files-wrapper
                display none

                &.is-shown
                    display block

        .t-due-date-wrapper
            input
                min-width: 100px
                width: 150px

        .t-more-fields-wrapper
            display none

            &.is-shown
                display block

        .t-buttons-block
            padding 1rem 0
            position sticky
            bottom 0
            background var(--background-color-history)
            box-shadow 0 -0.5rem 1rem -0.5rem var(--background-color-history)

            @media forMobile
                position fixed
                width 100%

            .icon16
                position relative
                top 3px
                vertical-align baseline
                margin 0 .4em

            .icon10
                position relative
                top 1px
                vertical-align baseline
                margin 0 .4em

            input[type="checkbox"]
                position relative
                top 1px

            input.button
                    margin: 0 0 0 1rem
                    cursor pointer

                    &:first-child
                        margin-left: 0

            .notice-list-wrapper
                display inline-block
                margin: 0 0 0 2em

            .more-fields-link
                float right
                display inline-block
                padding: 0 .5em;
                line-height: 34px;

                &:after
                    content ""
                    display table
                    clear both

.t-user-item.is-unassigned
    display block

.t-chips
    margin: 0 0 0 0.75em
    padding: 0
    display: flex
    flex-wrap: wrap

    .t-chip
        text-align: left;
        flex: 0 0 auto;
        position: relative;
        vertical-align: top;
        font-size 0.875rem
        font-weight 600
        line-height 1.4
        outline: none;
        font-style: normal;
        text-decoration: none;
        color: var(--menu-link-color)
        background: var(--chips-background-color)
        padding: 0.375em 0.75em 0.375em 0.5em;
        cursor: pointer;
        border-radius: 0.5em;
        border: 1px solid transparent;
        margin-right: 0.75em;
        margin-bottom: 0.75em;
        white-space: nowrap;

        a
            color: var(--menu-link-color);

        svg
            max-height: 1em;
            color: var(--menu-glyph-color);
            font-size: 1em
            margin-right 0.25rem

        input
            background transparent
            border-color transparent !important
            width 100px
            padding 0
            font-weight 600

        &:hover
            background: var(--chips-background-color-hover)
