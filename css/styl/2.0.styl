    max-width 100%
    display inline-block
    white-space nowrap
    text-overflow ellipsis
    overflow hidden
    box-sizing border-box

  &.active
    opacity 1

    img
      border 3px solid var(--blue)

.sidebar .sidebar-body
  height 100%
  overflow-y auto

.ui-autocomplete
  li.ui-menu-item
    padding 6px 12px !important

.t-preview-description
  line-height 1.3

  .t-preview-description-content
    margin 0.5rem 0

.t-tiny-ad-box
  position: absolute
  left 30px
  right 30px
  bottom 30px
  z-index 1
  max-width 350px
  border-radius 0.375rem
  background var(--background-color-blank)
  box-shadow 0 0.5rem 1.5rem -0.25rem rgba(0, 0, 0, 0.2)
  padding 0.75rem 0.75rem
  margin-top 0.25rem
  font-size 0.875rem
  overflow hidden

  .t-tiny-ad-close
    float right
    color var(--light-gray)
    font-size 1.5rem
    position relative
    top -0.6125rem

  .heading
    padding 0
    margin 0 0 0.75rem

  img.t-mobile-qr
    max-width 85px

    @media (max-width: 1360px)
      max-width 65px

    &.t-tiny
      max-width 65px

  img.t-mobile-badge
    display inline
    max-width 156px
    margin 0.35rem auto 0

    @media (max-width: 1360px)
      max-width 146px

  p
    font-size 0.8125rem

    @media (max-width: 760px)
      font-size 0.75rem

    &.t-tiny
      font-size 0.75rem
      line-height 1.2
      margin-top 0.25rem

  p.hint
    font-size 0.75rem

    @media (max-width: 760px)
      font-size 0.875rem

    a
      white-space nowrap
      text-overflow ellipsis
      height 1rem
      max-width 80%
